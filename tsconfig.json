{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@services/*": ["app/shared/services/*"],
      "@guards/*": ["app/shared/guards/*"],
      "@interfaces/*": ["app/shared/interfaces/*"],
      "@env/*": ["environments/*"],
      "@features/*": ["app/features/*"],
      "@core/*": ["app/core/*"],
      "primeng-lts/*": ["node_modules/primeng-lts/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
